@page
@model CRUDAEstudiante.Pages.Estudiantes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estudiante.ID" />
            <div class="form-group">
                <label asp-for="Estudiante.Carne" class="control-label"></label>
                <input asp-for="Estudiante.Carne" class="form-control" />
                <span asp-validation-for="Estudiante.Carne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Nombre" class="control-label"></label>
                <input asp-for="Estudiante.Nombre" class="form-control" />
                <span asp-validation-for="Estudiante.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Apellido" class="control-label"></label>
                <input asp-for="Estudiante.Apellido" class="form-control" />
                <span asp-validation-for="Estudiante.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Direccion" class="control-label"></label>
                <input asp-for="Estudiante.Direccion" class="form-control" />
                <span asp-validation-for="Estudiante.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar a CRUDAEstudiantes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model CRUDAEstudiante.Pages.Estudiantes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>CRUDAEstudiantes</h2>

<p>
    <a asp-page="Create">Crear Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Carne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estudiante) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Carne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
